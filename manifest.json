{
    "applications": {
        "gecko": {
            "id": "gdprtool@cliqz.com"
        }
    },
    "author": "Cliqz GmbH",
    "description": "Managing your data preferences",
    "manifest_version": 2,
    "name": "Consentric",
    "version": "0.0.1",
    "background": {
        "scripts": [
            "vendor/spanan.js",
            "dist/background.js"
        ]
    },
    "permissions": [
        "tabs",
        "<all_urls>",
        "storage",
        "webRequest",
        "cookies",
        "privacy"
    ],
    "page_action": {
        "browser_style": true,
        "default_title": "Consentric",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": [
                "vendor/spanan.js",
                "content-script.js"
            ],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": ["page-script.js"]
}
